@model IEnumerable<SportsBall.Models.Team>

<html>
<head>
    <title>SportsBall List</title>
</head>
<body>
    <h2>Teams</h2>
    <h4>@Html.DisplayNameFor(model => model.Name)</h4>
    <ul>
                @foreach (var listTeam in Model)
                {
                    <li>@Html.DisplayFor(modelTeam => listTeam.Name) | @Html.ActionLink("Details", "Details", new { id = listTeam.TeamId }) | @Html.ActionLink("Edit", "Edit", new { id = listTeam.TeamId })</li>
        }
    </ul>

    <p>@Html.ActionLink("Add new item", "Create")</p>
</body>
</html>
